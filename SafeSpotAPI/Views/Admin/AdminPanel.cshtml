<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 30px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4"></h2>

        <!-- Rapports en attente -->
        <div class="card p-3">
            <h4 class="mb-3">Rapports en attente</h4>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model.PendingReports)
                    {
                        <tr>
                            <td>@report.Id</td>
                            <td>@report.Description</td>
                            <td>@report.Date_Time</td>
                            <td>
                                <form action="https://localhost:7095/api/reports/validate/@report.Id" method="post" class="d-flex align-items-center gap-2">
                                    <textarea name="comment" class="form-control" placeholder="Commentaire" rows="1" required></textarea>
                                    <button type="submit" class="btn btn-success">Valider</button>
                                    <button type="button" class="btn btn-danger" onclick="deleteReport(@report.Id)">Rejeter</button>
                                </form>

                            </td>       
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Rapports Validés -->
        <div class="card p-3">
            <h4 class="mb-3">Rapports Validés</h4>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Commentaire</th>
                        <th>Date </th>
                        <th>Date Validation</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var validated in Model.ValidatedReports)
                    {
                        <tr>
                            <td>@validated.Id</td>
                            <td>@validated.Description</td>
                            <td>@validated.Comment</td>
                            <td>@validated.Date_Time</td>
                            <td>@validated.Date_Time_Validation</td>
                            <td class="text-end">
                                <button type="button" class="btn btn-warning btn-sm" onclick="deleteValidatedReport(@validated.Id)">Supprimer</button>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteReport(id) {
            fetch(`https://safespotapi20250207214631.azurewebsites.net/api/reports/${id}`, { // Injection de l'ID dans l'URL
                method: "DELETE"
            }).then(response => {
                if (response.ok) {
                    alert("Report supprimé !");
                    location.reload(); // Actualiser la page si nécessaire
                } else {
                    alert("Erreur lors de la suppression");
                }
            }).catch(error => console.error("Erreur :", error));
        }

        function deleteValidatedReport(id) {
            fetch(`https://safespotapi20250207214631.azurewebsites.net/api/reports/DeleteValidated/${id}`, { // Injection de l'ID dans l'URL
                method: "DELETE"
            }).then(response => {
                if (response.ok) {
                    alert("Report supprimé !");
                    location.reload(); // Actualiser la page si nécessaire
                } else {
                    alert("Erreur lors de la suppression");
                }
            }).catch(error => console.error("Erreur :", error));
        }
    </script>
</body>
</html>
